ifndef _BUILDDEFS_INCLUDED_
_BUILDDEFS_INCLUDED_ = 1

DEBUG = 
OPTIMIZER = 
MALLOCLIB = 

LIBATTR = $(TOPDIR)/libattr/libattr.la
LIBMISC = $(TOPDIR)/libmisc/libmisc.la

DEPATTR = $(TOPDIR)/lib/libattr.la
DEPMISC = $(TOPDIR)/lib/libmisc.la

prefix = $(INSTALLDIR)
exec_prefix = ${prefix}

PKG_NAME	= attr
PKG_USER	= root
PKG_GROUP	= root
PKG_RELEASE	= 1
PKG_VERSION	= 2.4.8
PKG_PLATFORM	= linux
PKG_DISTRIBUTION= Linux
PKG_BIN_DIR	= ${exec_prefix}/bin
PKG_SBIN_DIR	= ${exec_prefix}/sbin
PKG_LIB_DIR	= ${exec_prefix}/lib
PKG_DEVLIB_DIR	= ${exec_prefix}/libexec
PKG_INC_DIR	= ${prefix}/include/attr
PKG_MAN_DIR	= ${prefix}/man
PKG_DOC_DIR	= ${prefix}/share/doc/attr
PKG_LOCALE_DIR	= ${prefix}/share/locale

CC		= mipsel-linux-gcc
AWK		= awk
SED		= sed
TAR		= tar
ZIP		= gzip
MAKE		= make
ECHO		= echo
SORT		= sort
LN_S		= ln -s
LIBTOOL		= $(TOPDIR)/libtool
MAKEDEPEND	= makedepend

MSGFMT		= /usr/bin/msgfmt
MSGMERGE	= /usr/bin/msgmerge

RPM		= /bin/rpm
RPMBUILD	= /usr/bin/rpmbuild
RPM_VERSION	= 4

ENABLE_SHARED = yes
ENABLE_GETTEXT = yes
HAVE_ZIPPED_MANPAGES = false

ifeq ($(PKG_PLATFORM),linux)
PCFLAGS = -D_GNU_SOURCE -D_FILE_OFFSET_BITS=64
endif

GCFLAGS = $(OPTIMIZER) $(DEBUG) -funsigned-char -Wall -I$(TOPDIR)/include \
	  -DVERSION=\"$(PKG_VERSION)\" -DLOCALEDIR=\"$(PKG_LOCALE_DIR)\"  \
	  -DPACKAGE=\"$(PKG_NAME)\"

# Global, Platform, Local CFLAGS
CFLAGS += $(GCFLAGS) $(PCFLAGS) $(LCFLAGS)

include $(TOPDIR)/include/buildmacros

endif

#
# For targets that should always be rebuilt,
# define a target that is never up-to-date.
# Targets needing this should depend on $(_FORCE)
_FORCE = __force_build
